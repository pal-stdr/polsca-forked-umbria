UMBRIA_BRAIN_HSI_POLLY_PYTHON_SCRIPT=scripts/umbria-scripts/umbria-polybench-cpu-flow.py
POLLY_BRAIN_HSI_KERNELS_SRC_DIR=./example/PolyBenchC-4.2.1-brain-HSI-with-path-and-file-dumper
# POLLY_BRAIN_HSI_KERNELS_SRC_DIR=./example/PolyBenchC-4.2.1-brain-HSI-with-path

# You can run multiple kernel examples; or just one kernel.
POLLY_BRAIN_HSI_EXAMPLES=calibration
POLLY_BRAIN_HSI_KERNELS=calibration spectral_correction normalization svm_score probability_estimate gen_rgb_color_matrix brain_hsi
POLLY_EXCLUDE_BRAIN_HSI_KERNELS=brain_hsi



# Only --enable-polly flow

verify-one-brain-hsi-kernel-with-polly-isl-umbria-cpu-flow:
	PYTHONPATH=$(shell pwd) python3 $(UMBRIA_BRAIN_HSI_POLLY_PYTHON_SCRIPT) --source-dir $(POLLY_BRAIN_HSI_KERNELS_SRC_DIR) -e $(POLLY_BRAIN_HSI_EXAMPLES) --work-dir $(UMBRIA_BRAIN_HSI_POLLY_CPU_FLOW_RELATIVE_TMP_DIR)/verify-one-brain-hsi-kernel-with-polly-isl --enable-polly --enable-polly-polyhedral --polly-omp-opt --verify-benchmark-result --error-threshold 0.00001 --dump-csv-report


verify-brain-hsi-kernels-with-polly-isl-umbria-cpu-flow:
	PYTHONPATH=$(shell pwd) python3 $(UMBRIA_BRAIN_HSI_POLLY_PYTHON_SCRIPT) -j $(th) --source-dir $(POLLY_BRAIN_HSI_KERNELS_SRC_DIR) --examples $(POLLY_BRAIN_HSI_KERNELS) --work-dir $(UMBRIA_BRAIN_HSI_POLLY_CPU_FLOW_RELATIVE_TMP_DIR)/verify-brain-hsi-kernels-with-polly-isl --enable-polly --enable-polly-polyhedral --clang-opt --verify-benchmark-result --error-threshold 0.00001 --dump-csv-report --excl $(POLLY_EXCLUDE_BRAIN_HSI_KERNELS)



