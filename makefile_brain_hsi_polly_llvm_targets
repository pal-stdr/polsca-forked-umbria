# Only --enable-polly flow

verify-one-brain-hsi-kernel-with-polly-umbria-cpu-flow:
	PYTHONPATH=$(shell pwd) python3 $(UMBRIA_BRAIN_HSI_POLLY_PYTHON_SCRIPT) --source-dir $(BRAIN_HSI_KERNELS_SRC_DIR) -e $(UMBRIA_BRAIN_HSI_EXAMPLES) --work-dir $(UMBRIA_BRAIN_HSI_POLLY_CPU_FLOW_RELATIVE_TMP_DIR)/verify-one-brain-hsi-kernel-with-polly --enable-polly --enable-polly-polyhedral --polly-omp-opt --verify-benchmark-result --error-threshold 0.00001 --dump-csv-report


verify-brain-hsi-kernels-with-polly-umbria-cpu-flow:
	PYTHONPATH=$(shell pwd) python3 $(UMBRIA_BRAIN_HSI_POLLY_PYTHON_SCRIPT) -j $(th) --source-dir $(BRAIN_HSI_KERNELS_SRC_DIR) --examples $(UMBRIA_BRAIN_HSI_KERNELS) --work-dir $(UMBRIA_BRAIN_HSI_POLLY_CPU_FLOW_RELATIVE_TMP_DIR)/verify-brain-hsi-kernels-with-polly --enable-polly --enable-polly-polyhedral --clang-opt --verify-benchmark-result --error-threshold 0.00001 --dump-csv-report --excl $(EXCLUDE_UMBRIA_BRAIN_HSI_KERNELS)



