{
    "editor.mouseWheelZoom": true,
    "editor.wordWrap": "on",
    "editor.tabSize": 4,

    "cmake.configureOnOpen": false,
    
    "git.ignoredRepositories": [
        "${workspaceFolder}/polygeist",
        "${workspaceFolder}/polygeist/llvm-project",
        "${workspaceFolder}/polymer",
        "${workspaceFolder}/polymer/pluto",
        "${workspaceFolder}/polymer/llvm-9-src-for-polymer-pluto",
        "${workspaceFolder}/example/machsuite",
        "${workspaceFolder}/example/polybench",
        "${workspaceFolder}/example/rosetta",
        "${workspaceFolder}/papi",
        "${workspaceFolder}/papi-7-1-0-t-installation"
    ],
    
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/polygeist/llvm-project/**": true,
        "**/polymer/pluto/**": true,
        "**/polymer/llvm-9-src-for-polymer-pluto/**": true,
        "**/llvm-14-src-build-for-polygeist-polymer-polsca/**": true,
        "**/polygeist-build-for-polsca/**": true,
        "**/polymer-build-for-polsca/**": true,
        "**/polsca-build/**": true,
        "**/py3env/**": true,
        "**/__pycache__/**": true
    },
    "search.exclude": {
        "**/.git": true,
        "**/polygeist/llvm-project/**": true,
        "**/polymer/pluto/**": true,
        "**/polymer/llvm-9-src-for-polymer-pluto/**": true,
        "**/llvm-14-src-build-for-polygeist-polymer-polsca": true,
        "**/polygeist-build-for-polsca": true,
        "**/polymer-build-for-polsca": true,
        "**/polsca-build": true,
        "**/py3env": true,
        "**/__pycache__/**": true
    },

    "files.associations": {
        "*.c": "c",
        "*.cpp": "cpp",
        "*.sh": "shellscript",
        "*.md": "markdown",
        "*.ac": "m4",
        "*.am": "makefile",
        "*.json": "json",
        "*.inc": "cpp",
        "*.mlir": "mlir",
        "*.ll": "llvm",
    },
    "[c]": {
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.tabSize": 4
    },
    "[cpp]": {
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.tabSize": 4
    },
    "[shellscript]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false,
        "editor.tabSize": 4
    },
    "[markdown]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false,
        "editor.tabSize": 4
    },
    "[m4]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false,
        "editor.tabSize": 4
    },
    "[makefile]": {
        "editor.insertSpaces": false,
        "editor.detectIndentation": false,
        "editor.tabSize": 4
    },
    "[json]": {
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.tabSize": 4
    },
    "[mlir]": {
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.tabSize": 4
    },
    "[llvm]": {
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.tabSize": 4
    }
}